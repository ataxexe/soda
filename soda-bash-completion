# soda bash-completion

_soda () {
  local cur
  COMPREPLY=()
  cur=${COMP_WORDS[COMP_CWORD]}
  case "$cur" in
    --*)
    COMPREPLY=( $( compgen -W '$(soda parameters)' -- $cur ) );;
    *)
    COMPREPLY=( $( compgen -W '$(soda tasks)' -- $cur ) );;
  esac

  return 0
}

complete -F _soda -o nospace soda
